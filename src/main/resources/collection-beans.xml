	<tx:advice id="txAdvice">
		<tx:attributes>
			<tx:method name="add*" propagation="REQUIRED" />
			<tx:method name="*" propagation="SUPPORTS" read-only="true" />
		</tx:attributes>
	</tx:advice> -->

	<!-- Defines the aspect for the transaction advices 
	<aop:config>
		<aop:advisor pointcut="execution(* *..ArtistDAO.*(..))"
			advice-ref="txAdvice" />
	</aop:config>-->

</beans>